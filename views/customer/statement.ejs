<%- include('../partials/header', { title: 'Account Statement - SecureBank' }) %>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2 class="mb-4"><i class="bi bi-file-text"></i> Account Statement</h2>
            
            <% if (error) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Generate Statement</h5>
                    <div>
                        <span class="badge bg-light text-dark">
                            <i class="bi bi-wallet2"></i> <%= user.account.accountNumber %>
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <form>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="startDate" class="form-label">Start Date</label>
                                <input type="date" class="form-control" id="startDate" required>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="endDate" class="form-label">End Date</label>
                                <input type="date" class="form-control" id="endDate" required>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="format" class="form-label">Format</label>
                                <select class="form-select" id="format">
                                    <option value="pdf" selected>PDF</option>
                                    <option value="csv">CSV</option>
                                    <option value="excel">Excel</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="button" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-eye"></i> Preview
                            </button>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-download"></i> Download Statement
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Recent Transactions</h5>
                </div>
                <div class="card-body p-0">
                    <% if (transactions && transactions.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Description</th>
                                        <th>Type</th>
                                        <th class="text-end">Amount</th>
                                        <th class="text-end">Balance</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% transactions.forEach(transaction => { %>
                                        <tr>
                                            <td><%= transaction.timestamp.toLocaleDateString() %></td>
                                            <td><%= transaction.description %></td>
                                            <td>
                                                <span class="badge bg-<%= 
                                                    transaction.type === 'deposit' ? 'success' : 
                                                    transaction.type === 'withdrawal' ? 'danger' : 'primary'
                                                %>">
                                                    <%= transaction.type %>
                                                </span>
                                            </td>
                                            <td class="text-end">
                                                <span class="<%= 
                                                    transaction.type === 'deposit' ? 'text-success' : 
                                                    transaction.type === 'withdrawal' ? 'text-danger' : 'text-primary'
                                                %>">
                                                    <%= transaction.type === 'withdrawal' ? '-' : '+' %>$<%= transaction.amount.toFixed(2) %>
                                                </span>
                                            </td>
                                            <td class="text-end">$0.00</td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="bi bi-receipt display-4 text-muted"></i>
                            <p class="mt-3 text-muted">No transactions found for the selected period.</p>
                        </div>
                    <% } %>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <div>
                        <span class="text-muted">Showing last 10 transactions</span>
                    </div>
                    <div>
                        <a href="/transaction/history" class="btn btn-outline-primary btn-sm">
                            View Full History
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>