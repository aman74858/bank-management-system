<%- include('../partials/header', { title: 'Transfer Money - SecureBank' }) %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-arrow-left-right"></i> Transfer Money</h3>
                </div>
                <div class="card-body">
                    <% if (error) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i> <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% } %>
                    
                    <% if (success) { %>
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill"></i> <%= success %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% } %>
                    
                    <div class="row">
                        <div class="col-md-6">
                           <div class="card-body text-center">
                        <h6 class="card-title">From Account</h6>
                        <% if (account && account.accountNumber) { %>
                        <h4 class="text-primary"><%= account.accountNumber %></h4>
                         <p class="mb-0">Balance: <strong>â‚¹<%= account.balance ? account.balance.toFixed(2) : '0.00' %></strong></p>
                          <% } else { %>
                         <h4 class="text-danger">No Account Found</h4>
                        <p class="mb-0">Please contact support to create an account.</p>
                      <% } %>
                    </div>

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-body text-center">
                                    <h6 class="card-title">To Account</h6>
                                    <h4 class="text-success" id="recipientAccountDisplay">Enter account number</h4>
                                    <p class="mb-0" id="recipientNameDisplay">Recipient name will appear here</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <form action="/customer/transfer" method="POST">
                        <div class="mb-3">
                            <label for="accountNumber" class="form-label">Recipient Account Number</label>
                            <input type="text" class="form-control" id="accountNumber" name="accountNumber" 
                                   placeholder="Enter recipient's account number" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="amount" class="form-label">Amount to Transfer</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" class="form-control" id="amount" name="amount" 
                                       placeholder="Enter amount" step="0.01" min="1" required>
                            </div>
                            <div class="form-text">Maximum transfer per day: $2,500.00</div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="description" class="form-label">Description (Optional)</label>
                            <textarea class="form-control" id="description" name="description" 
                                      rows="2" placeholder="Add a note about this transfer"></textarea>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-arrow-left-right"></i> Transfer Money
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-muted">
                    <small>
                        <i class="bi bi-info-circle"></i> Transfers are processed immediately. Please verify account details before confirming.
                    </small>
                </div>
            </div>
            
            <div class="card mt-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent Transfers</h5>
                </div>
                <div class="card-body">
                    <div class="text-center py-3">
                        <i class="bi bi-receipt display-4 text-muted"></i>
                        <p class="mt-2 text-muted">No recent transfers</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Simple validation for account number
document.getElementById('accountNumber').addEventListener('blur', function() {
    const accountNumber = this.value;
    const recipientAccountDisplay = document.getElementById('recipientAccountDisplay');
    const recipientNameDisplay = document.getElementById('recipientNameDisplay');
    
    if (accountNumber.length === 10) {
        // In a real app, you would make an API call to validate the account number
        // This is just a simulation
        recipientAccountDisplay.textContent = accountNumber;
        recipientAccountDisplay.classList.remove('text-danger');
        recipientAccountDisplay.classList.add('text-success');
        
        // Simulate fetching recipient name
        setTimeout(() => {
            recipientNameDisplay.textContent = "John Doe"; // This would come from the API
        }, 500);
    } else if (accountNumber.length > 0) {
        recipientAccountDisplay.textContent = "Invalid account number";
        recipientAccountDisplay.classList.remove('text-success');
        recipientAccountDisplay.classList.add('text-danger');
        recipientNameDisplay.textContent = "Please check the number";
    } else {
        recipientAccountDisplay.textContent = "Enter account number";
        recipientAccountDisplay.classList.remove('text-danger', 'text-success');
        recipientNameDisplay.textContent = "Recipient name will appear here";
    }
});
</script>

<%- include('../partials/footer') %>