<%- include('../partials/header', { title: 'Withdraw Money - SecureBank' }) %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="bi bi-arrow-up-circle"></i> Withdraw Money</h3>
                </div>
                <div class="card-body">
                    <% if (error) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i> <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% } %>
                    
                    <% if (success) { %>
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill"></i> <%= success %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% } %>
                    
                    <div class="mb-4 text-center">
                        <div class="balance-display">
                            <h6 class="text-muted">Available Balance</h6>
                            <h2 class="display-5 fw-bold text-success">$<%= user.account.balance.toFixed(2) %></h2>
                        </div>
                    </div>
                    
                    <form action="/customer/withdraw" method="POST">
                        <div class="mb-3">
                            <label for="amount" class="form-label">Amount to Withdraw</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" class="form-control" id="amount" name="amount" 
                                       placeholder="Enter amount" step="0.01" min="1" required>
                            </div>
                            <div class="form-text">Maximum withdrawal per day: $1,000.00</div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="description" class="form-label">Description (Optional)</label>
                            <textarea class="form-control" id="description" name="description" 
                                      rows="2" placeholder="Add a note about this withdrawal"></textarea>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Withdrawal Method</label>
                            <div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="method" id="methodATM" value="atm" checked>
                                    <label class="form-check-label" for="methodATM">
                                        <i class="bi bi-credit-card"></i> ATM Withdrawal
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="method" id="methodTransfer" value="transfer">
                                    <label class="form-check-label" for="methodTransfer">
                                        <i class="bi bi-arrow-left-right"></i> Bank Transfer
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="method" id="methodCheck" value="check">
                                    <label class="form-check-label" for="methodCheck">
                                        <i class="bi bi-file-text"></i> Check
                                    </label>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-arrow-up-circle"></i> Withdraw Money
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-muted">
                    <small>
                        <i class="bi bi-info-circle"></i> Withdrawal limits apply. ATM withdrawals may have additional fees.
                    </small>
                </div>
            </div>
            
            <div class="card mt-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent Withdrawals</h5>
                </div>
                <div class="card-body">
                    <div class="text-center py-3">
                        <i class="bi bi-receipt display-4 text-muted"></i>
                        <p class="mt-2 text-muted">No recent withdrawals</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>